{
  "name": "weatherxml",
  "type": "module",
  "version": "7.0.0",
  "description": "weatherxml",
  "main": "./js/index.js",
  "scripts": {
    "install": "cross-env-shell bash install.sh",
    "trust-cert": "run-script-os",
    "trust-cert:macos": "cross-env-shell bash mac-trust.sh",
    "trust-cert:win32": "cross-env-shell bash win-trust.sh",
    "trust-cert:default": "cross-env-shell bash ubuntu-trust.sh",
    "trust-hosts": "run-script-os",
    "trust-hosts:win32": "powershell start-process -Verb runas powershell -ArgumentList '-ExecutionPolicy Bypass', '-noexit', 'powershell -File %INIT_CWD%\\trust-hosts.ps1'",
    "trust-hosts:default": "sudo $(which node) --env-file=.env trust-hosts.cjs",
    "https-server": "node --env-file=.env https-server.cjs",
    "php-server": "cross-env-shell bash php-server.sh",
    "watch-css": "cross-env-shell bash sass-watch.sh",
    "build-css": "cross-env-shell bash sass-build.sh",
    "production-css": "cross-env-shell bash sass-production.sh",
    "watch-js": "rollup -c ./rollup.config-watch.mjs -w --sourcemap --no-watch.clearScreen",
    "build-js": "rollup -c ./rollup.config-build-production.mjs --sourcemap",
    "production-js": "rollup -c ./rollup.config-build-production.mjs",
    "watch": "run-script-os",
    "watch:macos": "cross-env-shell bash mac-watch.sh",
    "watch:win32": "cross-env-shell bash win-watch.sh",
    "watch:default": "cross-env-shell bash ubuntu-watch.sh",
    "build": "cross-env-shell bash build.sh",
    "production": "cross-env-shell bash production.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sunnysunny77/weatherxml.git"
  },
  "author": "D.C",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sunnysunny77/weatherxml/issues"
  },
  "homepage": "https://github.com/sunnysunny77/weatherxml#readme",
  "devDependencies": {
    "@fortawesome/fontawesome-free": "latest",
    "@rollup/plugin-babel": "latest",
    "@rollup/plugin-commonjs": "latest",
    "@rollup/plugin-terser": "latest",
    "bootstrap": "^5.3.3",
    "cross-env": "latest",
    "dotenv": "latest",
    "eslint": "latest",
    "express": "latest",
    "fs": "latest",
    "globals": "latest",
    "hostile": "latest",
    "http": "latest",
    "https": "latest",
    "rollup": "latest",
    "rollup-plugin-livereload": "latest",
    "rollup-plugin-sourcemaps": "latest",
    "run-script-os": "latest",
    "sass": "latest",
    "vhost": "latest"
  }
}
