{
  "name": "weatherxml",
  "type": "module",
  "version": "7.0.0",
  "description": "weatherxml",
  "main": "./js/index.js",
  "scripts": {
    "install": "cross-env-shell bash install.sh",
    "install-cert": "run-script-os",
    "install-cert:macos": "cross-env-shell bash mac-trust.sh",
    "install-cert:win32": "cross-env-shell bash win-trust.sh",
    "install-cert:default": "cross-env-shell bash ubuntu-trust.sh",
    "edit-hosts": "run-script-os",
    "edit-hosts:win32": "powershell start-process -Verb runas powershell -ArgumentList 'â€“ExecutionPolicy Bypass', '-noexit', 'powershell -File %INIT_CWD%\\win32.ps1'",
    "edit-hosts:default": "sudo node --env-file=.env edit-hosts.cjs",
    "https-server": "node --env-file=.env https-server.cjs",
    "php-server": "node php-server.js",
    "open-server": "node --env-file=.env open.js",
    "watch-css": "sass --embed-sources ./scss/app.scss:./site/css/app.min.css --style compressed -w",
    "build-css": "sass --embed-sources ./scss/app.scss:./site/css/app.min.css --style compressed",
    "production-css": "sass ./scss/app.scss:./site/css/app.min.css --style compressed --no-source-map",
    "watch-js": "rollup -c ./rollup.config-watch.mjs -w --sourcemap",
    "build-js": "rollup -c ./rollup.config.mjs --sourcemap",
    "production-js": "rollup -c ./rollup.config.mjs",
    "watch": "concurrently -r \"npm:php-server\" \"npm:watch-css\" \"npm:watch-js\" \"npm:https-server\" \"npm:open-server\"",
    "build": "concurrently -r \"npm:build-css\" \"npm:build-js\"",
    "production": "concurrently -r \"npm:production-css\" \"npm:production-js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sunnysunny77/weatherxml.git"
  },
  "author": "D.C",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sunnysunny77/weatherxml/issues"
  },
  "homepage": "https://github.com/sunnysunny77/weatherxml#readme",
  "devDependencies": {
    "@fortawesome/fontawesome-free": "latest",
    "@rollup/plugin-babel": "latest",
    "@rollup/plugin-commonjs": "latest",
    "@rollup/plugin-terser": "latest",
    "bootstrap": "^5.3.3",
    "concurrently": "latest",
    "cross-env": "latest",
    "dotenv": "latest",
    "eslint": "latest",
    "express": "latest",
    "fs": "latest",
    "globals": "latest",
    "hostile": "latest",
    "http": "latest",
    "https": "latest",
    "open": "latest",
    "php-server": "latest",
    "rollup": "latest",
    "rollup-plugin-livereload": "latest",
    "rollup-plugin-sourcemaps": "latest",
    "run-script-os": "latest",
    "sass": "latest",
    "vhost": "latest"
  }
}
